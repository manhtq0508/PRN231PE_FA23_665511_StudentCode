@model WebApp.Models.SilverJewelryViewModel

@{
    ViewData["Title"] = "Delete Silver Jewelry";
}

<div class="container mt-4">
    <h1>Delete Silver Jewelry</h1>
    <hr />

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Metal Weight</dt>
                <dd class="col-sm-9">@Model.MetalWeight.ToString("F2")</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Production Year</dt>
                <dd class="col-sm-9">@Model.ProductionYear</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
